{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "error"
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
} 